{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",

    /* ↓ ❌  rootDir removed so shared sources are allowed  */
    "noEmit": false,
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  /* we still only compile the Electron‑main sources here */
  "include": ["src/**/*"]
}
