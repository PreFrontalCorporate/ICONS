{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node", "electron"],
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/main.ts",
    "src/ipc/**/*.ts"
  ],
  "exclude": [
    "src/renderer/**/*", "src/ipc/firestore.ts"
  ]
}
