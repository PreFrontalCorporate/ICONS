{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",          // <‑‑ keeps dist/main.js in place for electron‑builder
    "outDir": "dist",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/renderer/**/*"]   // compiled via separate project
}
