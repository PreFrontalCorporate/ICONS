{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir"  : "dist",          // compiled JS
    "rootDir" : "src",           // ⬅ emits dist/main.js again
    "rootDirs": [
      "src",                     // main‑process code
      "../../components",        // React components shared with renderer
      "../../packages"           // stickers package
    ],

    /* usual flags */
    "module"        : "esnext",
    "target"        : "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck"   : true
  },

  "include": ["src/**/*"]
}
