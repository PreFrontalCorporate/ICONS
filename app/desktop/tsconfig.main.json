{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /* emit exactly the two main‑process files to dist */
    "rootDir": "src",
    "outDir":  "dist",

    "module":  "esnext",
    "target":  "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck":    true
  },

  /* ONLY the main‑process sources */
  "include": [
    "src/main.ts",
    "src/preload.ts"
  ]
}
