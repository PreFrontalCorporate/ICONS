    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "electron"],
    /* Allow import path like '../foo.json' when we get there */
    "resolveJsonModule": true,
    /* Donâ€™t look for every @types of transitive deps */
