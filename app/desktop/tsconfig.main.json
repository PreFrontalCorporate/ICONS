{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /*––––––––– emit to dist –––––––––*/
    "outDir": "dist",
    "rootDir": "src",          // <‑‑ restore this so main.ts → dist/main.js

    /*––––––––– TS target / module –––––––––*/
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",

    /*––––––––– quality / interop –––––––––*/
    "esModuleInterop": true,
    "skipLibCheck":    true,

    /*––––––––– allow shared sources ––––––*/
    "rootDirs": [
      "src",                 // local desktop sources
      "../../components",    // shared React components
      "../../packages"       // shared sticker package
    ]
  },

  "include": ["src/**/*"]
}
