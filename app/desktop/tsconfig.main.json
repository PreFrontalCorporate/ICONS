{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /* —— emit —— */
    "outDir": "dist",               // compiled JS ends up in   app/desktop/dist
                                    // ( electron‑builder expects dist/main.js )

    /* —— module/target —— */
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",

    /* —— where the compiler can pull source from —— */
    "rootDirs": [
      "src",                        // Desktop‑specific code
      "../../components",           // shared React components
      "../../packages/stickers"     // shared data / types
    ],

    /* —— misc goodies —— */
    "esModuleInterop": true,
    "skipLibCheck":   true
  },

  "include": [
    "src/**/*",
    "../../components/**/*",
    "../../packages/stickers/**/*"
  ]
}
