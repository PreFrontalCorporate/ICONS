{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",          // what electron‑builder expects
    "rootDir": "src",          // <- keep this: everything must stay below app/desktop/src

    "module":            "esnext",
    "target":            "es2020",
    "moduleResolution":  "node",
    "esModuleInterop":   true,
    "skipLibCheck":      true
  },

  "include": [
    "src/**/*"            // ⬅️ **only** the main‑process code
  ]
}
