{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /* output                                     */
    "outDir":  "dist",
    "rootDir": "src",          // ⬅️ keep main‑process files scoped here

    /* emit / language targets                    */
    "module":            "esnext",
    "target":            "es2020",
    "moduleResolution":  "node",

    /* niceties                                  */
    "esModuleInterop": true,
    "skipLibCheck":    true
  },

  "include": ["src/**/*"]       // ⬅️ main & preload only
}
