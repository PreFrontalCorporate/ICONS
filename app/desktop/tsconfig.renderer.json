{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir": "dist/renderer",

    /* ---------------- Core targets ---------------- */
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    /* ---------------- Extras ---------------------- */
    "rootDirs": [
      "src",                // rendererâ€‘local sources
      "../../components",   // shared React components
      "../../packages"      // stickers package
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },

  "include": [
    "src/renderer/**/*",
    "src/types/**/*",
    "../../components/**/*",
    "../../packages/stickers/**/*"
  ]
}
