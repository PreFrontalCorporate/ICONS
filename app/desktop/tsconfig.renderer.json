{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir": "dist/renderer",

    /* language */
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    /* extra flags */
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },

  /* IMPORTANT â€‘ include the shared folders so TS sees them */
  "include": [
    "src/renderer/**/*",
    "src/types/**/*",
    "../../components/**/*",
    "../../packages/stickers/**/*"
  ]
}
