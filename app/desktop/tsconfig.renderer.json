{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/renderer",
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["vite/client", "node"],    // node types for `process`
    "rootDirs": [
      "src/renderer",
      "../../components",
      "../../packages/stickers"
    ]
  },
  "include": ["src/renderer/**/*", "../../components/**/*", "../../packages/stickers/**/*"],
  "exclude": ["scripts/**/*"]            // prevents buildâ€‘helper scripts leaking in
}
