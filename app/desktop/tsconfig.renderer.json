{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/renderer",
    "module":       "esnext",
    "target":       "es2020",
    "moduleResolution": "node",
    "esModuleInterop":  true,
    "resolveJsonModule": true,   // lets you import *.json
    "skipLibCheck":      true,
    "types": ["vite/client"]     // renderer has the DOM
  },
  "include": ["src/renderer/**/*"]
}
