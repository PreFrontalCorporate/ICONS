{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir": "dist/renderer",

    /* TS / Vite settings */
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "esModuleInterop":   true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"],

    /* allow the renderer to import shared code */
    "rootDirs": [
      "src/renderer",
      "../../components",
      "../../packages"
    ]
  },

  "include": [
    "src/renderer/**/*",
    "src/types/**/*"
  ]
}
