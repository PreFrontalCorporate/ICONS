{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir": "dist/renderer",

    "module"           : "esnext",
    "target"           : "es2020",
    "moduleResolution" : "node",
    "jsx"              : "react-jsx",

    "esModuleInterop"  : true,
    "resolveJsonModule": true,
    "skipLibCheck"     : true,

    "types": [
      "vite/client",
      "node"                 // ← adds Node globals so fs / path references type‑check
    ],

    "rootDirs": [
      "src/renderer",
      "../../components",
      "../../packages/stickers"
    ]
  },

  "include": [
    "src/renderer/**/*",
    "../../components/**/*",
    "../../packages/stickers/types.ts",       // runtime types only
    "../../packages/stickers/index.json"
  ],

  "exclude": [
    "../../packages/stickers/build_index.ts"  // Node‑only build script — keep it out
  ]
}
