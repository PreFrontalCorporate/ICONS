{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir":  "dist/renderer",

    /* allow the renderer to import shared code */
    "rootDirs": [
      "src/renderer",
      "../../components",
      "../../packages/stickers"
    ],

    "module":            "esnext",
    "target":            "es2020",
    "moduleResolution":  "node",
    "jsx":               "react-jsx",

    "esModuleInterop":   true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"]
  },

  "include": [
    "src/renderer/**/*",
    "src/types/**/*"
  ]
}
