{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /* â€‘â€‘â€‘ where compiled JS is written â€‘â€‘â€‘ */
    "outDir": "dist/renderer",

    /* language / module targets */
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    /* allow the renderer to see sibling workspaces ğŸ‘‡ */
    "rootDirs": [
      "src",                    // â† our own code
      "../../components",       // â† shared React bits
      "../../packages/stickers" // â† sticker JSON & types
    ],

    /* qualityâ€‘ofâ€‘life flags */
    "esModuleInterop":  true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"]
  },

  "include": [
    "src/renderer/**/*",
    "src/types/**/*",
    "../../components/**/*",
    "../../packages/stickers/**/*"
  ]
}
