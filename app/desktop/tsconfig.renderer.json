{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/renderer",
    "module":       "esnext",
    "target":       "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "esModuleInterop":  true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"],
    "rootDirs": ["src/renderer", "../../components", "../../packages/stickers"]
  },
  "include": ["src/renderer/**/*", "../../components/**/*", "../../packages/stickers/**/*"]
}
