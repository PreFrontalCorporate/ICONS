{
  "extends": "../../tsconfig.json",

  // ---------- RENDERER / WEBVIEW ----------
  "compilerOptions": {
    "outDir": "dist/renderer",

    // Everything the renderer might need:
    "rootDirs": [
      "src/renderer",
      "../../components",
      "../../packages/stickers"
    ],

    "module":           "esnext",
    "target":           "es2020",
    "moduleResolution": "node",
    "jsx":              "react-jsx",

    "esModuleInterop":  true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"]
  },

  "include": [
    "src/renderer/**/*",
    "../../components/**/*",
    "../../packages/stickers/**/*"
  ]
}
