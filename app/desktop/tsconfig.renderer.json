{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    "outDir": "dist/renderer",

    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    "rootDirs": [
      "src/renderer",
      "../../components",
      "../../packages"
    ],

    "esModuleInterop":  true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"]
  },

  "include": ["src/renderer/**/*", "src/types/**/*"]
}
