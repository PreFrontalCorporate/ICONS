{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /* ‑‑‑ where compiled JS is written ‑‑‑ */
    "outDir": "dist/renderer",

    /* language / module targets */
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    /* allow the renderer to see sibling workspaces 👇 */
    "rootDirs": [
      "src",                    // ← our own code
      "../../components",       // ← shared React bits
      "../../packages/stickers" // ← sticker JSON & types
    ],

    /* quality‑of‑life flags */
    "esModuleInterop":  true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"]
  },

  "include": [
    "src/renderer/**/*",
    "src/types/**/*",
    "../../components/**/*",
    "../../packages/stickers/**/*"
  ]
}
