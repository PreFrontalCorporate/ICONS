{
  "extends": "../../tsconfig.json",

  "compilerOptions": {
    /* emit to app/desktop/dist/renderer */
    "outDir": "dist/renderer",

    "module":  "esnext",
    "target":  "es2020",
    "moduleResolution": "node",
    "jsx": "react-jsx",

    /* same **rootDirs** trick as the mainâ€‘process config */
    "rootDirs": [
      "src/renderer",
      "../../components",
      "../../packages/stickers"
    ],

    "esModuleInterop":   true,
    "resolveJsonModule": true,
    "skipLibCheck":      true,
    "types": ["vite/client"]
  },

  "include": [
    "src/renderer/**/*",
    "../../components/**/*",
    "../../packages/stickers/**/*",
    "src/types/**/*"
  ]
}
