{
  "name": "icon-desktop",
  "version": "1.0.73",
  "private": true,
  "productName": "Icon Desktop",
  "author": "Prefrontal Corporate",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "postbuild": "node ../../scripts/desktop/write-dist-pkg.cjs",
    "start": "electron dist/main.js",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.prefrontal.icon",
    "asar": true,
    "directories": {
      "output": "../../release"
    },
    "files": [
      "dist/**"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "mac": { "target": "dmg" },
    "linux": { "target": "AppImage" }
  },
  "dependencies": {
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "typescript": "^5.4.4",
    "vite": "^5.4.19"
  }
}
