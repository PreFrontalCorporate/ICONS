{
  "name": "desktop",
  "private": true,
  "version": "0.1.0",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "electronmon . --ignore=packages/stickers",
    "build": "electron-builder"
  },
  "dependencies": {
    "@google-cloud/pubsub": "^5.1.0",
    "electron": "^29.4.6",
    "electron-updater": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/electron": "^1.6.12",
    "@types/node": "^20.10.5",
    "electron-builder": "^24.13.1",
    "electronmon": "^2.0.0",
    "typescript": "^5.4.4"
  },
  "build": {
    "productName": "IconStickers",
    "files": [
      "dist/**/*",
      "packages/stickers/**/*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "owner": "PreFrontalCorporate",
      "repo": "icon"
    }
  }
}
