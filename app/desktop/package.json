{
  "name": "icon-desktop",
  "version": "1.0.54",
  "private": true,
  "description": "icon desktop app",
  "type": "module",
  "main": "dist/main.js",
  "productName": "icon",
  "scripts": {
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "postbuild": "node ../../scripts/desktop/write-dist-pkg.cjs",
    "dist": "pnpm run build && electron-builder",
    "sync:scripts": "node ../../scripts/desktop/sync-scripts.mjs"
  },
  "dependencies": {
    "@google-cloud/firestore": "7.11.3",
    "@shopify/shopify-api": "^11.14.1",
    "electron-updater": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.10.5",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.0",
    "typescript": "^5.4.4",
    "vite": "^5.4.9"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "dist/preload.cjs"
    ],
    "files": [
      "dist/**/*",
      "windows/**/*",
      "build/icon.*",
      "packages/stickers/**/*"
    ],
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32",
            "arm64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "maintainer": "PreFrontal Corporate <support@cbb.homes>",
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    },
    "publish": {
      "provider": "github",
      "owner": "PreFrontalCorporate",
      "repo": "icon"
    }
  }
}
