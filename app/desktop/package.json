{
  "name": "icon-desktop",
  "productName": "icon",
  "version": "1.0.11",                       // bump – will match your next tag
  "description": "Overlay sticker client for Icon Suite – pin your stickers on top of any app.",
  "homepage": "https://github.com/PreFrontalCorporate/icon",
  "license": "MIT",
  "author": {
    "name": "PreFrontal Corporate",
    "email": "support@cbb.homes",
    "url": "https://cbb.homes"
  },
  "private": true,
  "type": "module",

  /* ────────────── ENTRY POINTS ────────────── */
  "main": "dist/main.js",                    // compiled main process
  "browser": "dist/renderer/index.html",     // where electron‑builder will look
  "scripts": {
    "dev": "concurrently -k -n MAIN,RENDER \"pnpm run dev:main\" \"pnpm run dev:renderer\"",
    "dev:main": "tsc -w -p tsconfig.main.json",
    "dev:renderer": "vite --config vite.config.ts --watch",
    "build": "pnpm run build:main && pnpm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build --config vite.config.ts",
    "dist": "electron-builder"               // no hard‑coded output dir
  },

  /* ────────────── RUNTIME DEPS ────────────── */
  "dependencies": {
    "@google-cloud/firestore": "7.11.3",
    "electron-updater": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "ws": "^8.18.3"
  },

  /* ────────────── DEV‑DEPS ────────────── */
  "devDependencies": {
    "@types/node": "^20.10.5",
    "concurrently": "^8.2.2",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.0",
    "typescript": "^5.4.4",
    "vite": "^5.2.10",
    "vite-plugin-electron-renderer": "^0.15.1"
  },

  /* ────────────── ELECTRON‑BUILDER ────────────── */
  "build": {
    "icon": "build/icon",
    "electronDownload": {
      "mirror": "https://npmmirror.com/mirrors/electron/"
    },
    "files": [
      "dist/**/*",
      "windows/**/*",
      "build/icon.*",
      "packages/stickers/**/*"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.graphics-design"
    },
    "win": {
      "target": [
        { "target": "nsis",     "arch": ["x64", "ia32", "arm64"] },
        { "target": "portable", "arch": ["x64"] }
      ]
    },
    "linux": {
      "maintainer": "PreFrontal Corporate <support@cbb.homes>",
      "category": "Utility",
      "target": ["AppImage", "deb", "rpm"]
    },
    "publish": {
      "provider": "github",
      "owner": "PreFrontalCorporate",
      "repo": "icon"
    }
  }
}
