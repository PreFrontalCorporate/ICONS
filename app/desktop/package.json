
{
  "name": "icon-desktop",
  "productName": "Icon Desktop",
  "version": "1.0.101",
  "description": "Overlay sticker client for Icon Suite â€“ pin your stickers on top of any app.", 
  "license": "MIT",
  "homepage": "https://github.com/PreFrontalCorporate/icon",
  "repository": { "type": "git", "url": "https://github.com/PreFrontalCorporate/icon.git" },
  "author": { "name": "PreFrontal Corporate", "email": "support@cbb.homes", "url": "https://cbb.homes" },

  "main": "dist/entry.cjs",

  "scripts": {
    "dev": "vite dev --config vite.config.ts & electronmon . --ignore=packages/stickers",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "postbuild": "node ../../scripts/desktop/write-dist-pkg.cjs",
    "dist": "pnpm run build && electron-builder"
  },

  "dependencies": {
    "electron-updater": "^5.3.0",
    "electron-store": "^9.0.0",
    "fast-glob": "^3.3.2",
    "archiver": "^6.0.2",
    "sanitize-filename": "^1.6.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "electron": "^29.4.6",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "typescript": "^5.4.4",
    "vite": "^5.4.19"
  },

  "build": {
    "asar": true,
    "asarUnpack": [ "dist/preload.cjs" ],
    "files": [ "dist/**/*", "windows/**/*", "build/icon.*", "packages/stickers/**/*" ],
    "mac":   { "target": ["dmg", "zip"], "category": "public.app-category.graphics-design" },
    "win":   {
      "target": [
        { "target": "nsis",     "arch": ["x64", "ia32", "arm64"] },
        { "target": "portable", "arch": ["x64"] }
      ],
      "publisherName": "PreFrontal Corporate"
    },
    "linux": { "maintainer": "PreFrontal Corporate <support@cbb.homes>", "category": "Utility", "target": ["AppImage">
    "publish": { "provider": "github", "owner": "PreFrontalCorporate", "repo": "icon" }
  }
}
