{
  "compilerOptions": {
    /* â€”â€”â€” language & emit â€”â€”â€” */
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    /* â€”â€”â€” safety â€”â€”â€” */
    "strict": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "noEmit": true,
    "incremental": true,
    /* â€”â€”â€” module resolution & aliases â€”â€”â€” */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".", // root of theÂ web workspace
    "paths": {
      "@/*": [
        "./*"
      ] // e.g. "@/components/â€¦"
    },
    /* â€”â€”â€” ðŸ‘‡  IMPORTANT  â€”â€”â€” */
    "types": [
      "node"
    ], // keep Node globals
    "typeRoots": [
      "./types", // our local stubs
      "../node_modules/@types", // regular DefinitelyTyped pkgs
      "../../node_modules/@types" // rootâ€‘level (monorepo) pkgs
    ],
    /* â€”â€”â€” Next.js plugin â€”â€”â€” */
    "plugins": [
      {
        "name": "next"
      }
    ],
    "allowJs": true
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "types/**/*.d.ts" // ensure the stub is picked up
  ],
  "exclude": [
    "node_modules"
  ]
}
